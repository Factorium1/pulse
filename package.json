{
  "name": "pulse",
  "private": true,
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
  "scripts": {
    "dev": "turbo run dev",
    "dev-db:up": "docker compose -f docker-compose.dev.yml up -d",
    "dev-db:down": "docker compose -f docker-compose.dev.yml down",
    "dev-db:reset": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier . --write",
    "prepare": "husky",
    "preinstall": "if [ \"$npm_execpath\" != *pnpm* ]; then echo '\\n‚ùå Dieses Projekt verwendet pnpm!\\n'; exit 1; fi"
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "turbo": "latest"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx,mjs,cjs}": [
      "pnpm exec eslint --fix --config apps/web/eslint.config.mjs --",
      "pnpm exec prettier --write --"
    ],
    "*.{json,md,css,scss}": [
      "pnpm exec prettier --write --"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint"
      ]
    },
    "packageExtensions": {
      "eslint-plugin-react-hooks@*": {
        "peerDependencies": {
          "eslint": "*"
        }
      },
      "eslint-plugin-react-native@*": {
        "peerDependencies": {
          "eslint": "*"
        }
      }
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "sharp",
      "unrs-resolver"
    ]
  },
  "dependencies": {
    "better-auth": "^1.3.34"
  }
}
