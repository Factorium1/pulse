{
  "name": "pulse",
  "private": true,
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c",
  "scripts": {
    "dev": "turbo run dev",
    "dev-db:up": "docker compose -f docker-compose.dev.yml up -d",
    "dev-db:down": "docker compose -f docker-compose.dev.yml down",
    "dev-db:reset": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d && pnpm prisma migrate dev",
    "dev-db:init": "pnpm run dev-db:reset && npx prisma migrate dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier . --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prisma": "^7.0.1",
    "turbo": "latest",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx,mjs,cjs}": [
      "pnpm exec eslint --fix --config apps/web/eslint.config.mjs --",
      "pnpm exec prettier --write --"
    ],
    "*.{json,md,css,scss}": [
      "pnpm exec prettier --write --"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint"
      ]
    },
    "packageExtensions": {
      "eslint-plugin-react-hooks@*": {
        "peerDependencies": {
          "eslint": "*"
        }
      },
      "eslint-plugin-react-native@*": {
        "peerDependencies": {
          "eslint": "*"
        }
      }
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "better-auth": "^1.3.34",
    "pg": "^8.16.3"
  }
}
