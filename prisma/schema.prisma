generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                @id @default(cuid())
  email                String                @unique
  name                 String?
  createdSurveys       Survey[]              @relation("SurveyCreator")
  emailVerified        Boolean               @default(false)
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  surveyParticipations SurveyParticipation[]
  surveys              Survey[]              @relation("SurveyUser")
}

model Survey {
  id           String                @id @default(cuid())
  title        String
  description  String?
  creator      User                  @relation("SurveyCreator", fields: [creatorId], references: [id])
  creatorId    String
  questions    Question[]
  participants SurveyParticipation[]
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  userId       String?
  user         User?                 @relation("SurveyUser", fields: [userId], references: [id])
}

model Question {
  id            String             @id @default(cuid())
  title         String
  description   String?
  type          QuestionType
  options       String[] // For single/multiple-choice questions
  survey        Survey             @relation(fields: [surveyId], references: [id])
  surveyId      String
  timingType    QuestionTimingType @default(IMMEDIATE)
  fixedAt       DateTime?
  offsetMinutes Int?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  answers       Answer[]
}

enum QuestionTimingType {
  IMMEDIATE
  DELAYED
  SCHEDULED
}

enum QuestionType {
  TEXT
  MULTIPLE_CHOICE
  SINGLE_CHOICE
  SCALE
  RATING
  AUDIO
  VIDEO
  IMAGE
}

model SurveyParticipation {
  id          String              @id @default(cuid())
  user        User                @relation(fields: [userId], references: [id])
  userId      String
  survey      Survey              @relation(fields: [surveyId], references: [id])
  surveyId    String
  status      ParticipationStatus @default(ACTIVE)
  currentStep Int?
  startedAt   DateTime            @default(now())
  completedAt DateTime?
  answers     Answer[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}

enum ParticipationStatus {
  INVITED
  ACTIVE
  COMPLETED
  DROPPED
}

model Answer {
  id              String              @id @default(cuid())
  participation   SurveyParticipation @relation(fields: [participationId], references: [id])
  participationId String
  question        Question            @relation(fields: [questionId], references: [id])
  questionId      String
  value           String
  answeredAt      DateTime            @default(now())
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
}
